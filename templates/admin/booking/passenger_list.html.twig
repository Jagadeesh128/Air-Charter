{% set passengers = field.value %}
{% if passengers is iterable and passengers|length > 0 %}
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Age</th>
                <th>Document ID</th>
                <th>Seat</th>
                <th>Class</th>
            </tr>
        </thead>
        <tbody>
            {% for passenger in passengers %}
                <tr>
                    <td>{{ passenger.name }}</td>
                    <td>{{ passenger.age }}</td>
                    <td>{{ passenger.documentId }}</td>
                    <td>{{ passenger.seatNumber }}</td>
                    <td>{{ passenger.seatClass }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% else %}
    <p>No passengers added.</p>
{% endif %}
